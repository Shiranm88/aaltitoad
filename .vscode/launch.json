            ],
            "cwd": "${workspaceFolder}/Debug"
        },
        {
            "name": "Launch Verifier",
            "type": "cppdbg",
            "osx": {
                "type": "codelldb"
            },
            "request": "launch",
            "program": "${workspaceFolder}/Debug/verifier",
            "args": [ 
                "-f", "../test/verification/fischer-suite/fischer-2/",
                "-q", "../test/verification/fischer-suite/fischer-2/Queries.json",
                "-i", ".*\\.ignore.*"
